%header.navbar.navbar-inverse
  .navbar-inner
    .container
      #logo
        = link_to 'MIDITOPIA', root_path, :class => 'brand'

      #log-in
        - if signed_in?
          %span.welcome-msg= "Welcome, #{current_user.username}!"
          %br
          = link_to 'Edit Profile', edit_user_path(current_user)
          |
          = link_to 'Sign out', signout_path, :method => 'delete'
        - else
          = link_to 'Sign Up', signup_path, :class => 'btn btn-primary'
          = link_to 'Sign In', signin_path, :class => 'btn'
